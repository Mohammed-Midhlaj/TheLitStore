<%- include("../../views/partials/admin/header") %>
    <style>
        .pagination-container {
            text-align: center;
        }

        .pagination {
            display: inline-block;
        }

        .pagination a,
        .pagination .current-page {
            display: inline-block;
            padding: 5px 10px;
            margin: 0 2px;
            border: 1px solid #ddd;
            text-decoration: none;
            color: #333;
        }

        .pagination a:hover {
            background-color: #f5f5f5;
        }

        .error-message {
            color: red;
        }
    </style>
    <section class="content-main">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title">Brands</h2>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <form id="addBrandForm" method="post" action="/admin/addBrand" enctype="multipart/form-data">
                            <div class="mb-4">
                                <label for="product_name" class="form-label">Brand Name</label>
                                <input type="text" name="name" placeholder="Type here" class="form-control" maxlength="30" />
                            </div>
                            <label for="product_name" class="form-label">Brand Image</label>
                            <div class="input-upload">
                                <img src="" alt="" />
                                <input class="form-control border" name="image" type="file" />
                            </div>
                            <div class="d-grid">
                                <button class="btn btn-primary mt-20" type="submit">
                                    Add Brand
                                </button>
                            </div>
                        </form>

                    </div>
                    <div class="col-md-7 ml-105">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Brand</th>
                                        <th>Logo</th>
                                        <th>Status</th>
                                        <th>Block/Unblock/Delete</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%data.reverse().forEach((brand,index)=>{%>
                                        <tr>
                                            <td class="text-start">
                                                <%=brand.brandName%>
                                            </td>
                                            <td class="text-start">
                                                <div class="brand-image" style="
                        width: 100px;
                        height: 100px;
                        border-radius: 50%;
                        overflow: hidden;
                      ">
                                                    <% if (brand.brandImage && brand.brandImage[0]) { %>
                                                        <img src="/uploads/re-image/<%=brand.brandImage[0]%>"
                                                            alt="<%=brand.brandName%>" class="img-fluid rounded-circle"
                                                            style="width: 100%; height: auto" />
                                                    <% } else { %>
                                                        <img src="/images/default-brand.png"
                                                            alt="<%=brand.brandName%>" class="img-fluid rounded-circle"
                                                            style="width: 100%; height: auto" />
                                                    <% } %>
                                                </div>
                                            </td>
                                            <td class="text-start">
                                                <% if (brand.isBlocked === true) { %>
                                                    <span class="badge bg-danger">Blocked</span>
                                                <% } else { %>
                                                    <span class="badge bg-success">Unblocked</span>
                                                <% } %>
                                            </td>
                                            <td class="text-start">
                                                <% if(brand.isBlocked===false) { %>
                                                    <button class="btn btn-danger block-btn" data-id="<%= brand._id %>" style="width: 90px;"
                                                        onclick="return false;">
                                                        Block
                                                    </button>
                                                    <% } else { %>
                                                        <button class="btn btn-success unblock-btn" data-id="<%= brand._id %>" style="width: 90px;"
                                                            onclick="return false;">
                                                            Unblock
                                                        </button>
                                                        <% } %>

                                                            <button class="btn btn-danger delete-btn" data-id="<%= brand._id %>" style="width: 90px;"
                                                                onclick="return false;">
                                                                Delete
                                                            </button>
                                            </td>

                                            </td>
                                        </tr>
                                        <%})%>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="pagination-container">
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const form = document.getElementById('addBrandForm');
            if (form) {
                form.addEventListener('submit', async (e) => {
                    e.preventDefault();
                    const formData = new FormData(form);
                    try {
                        const res = await fetch('/admin/addBrand', {
                            method: 'POST',
                            body: formData
                        });
                        const data = await res.json();
                        if (!data.status) {
                            Swal.fire('Error', data.message || 'Failed to add brand', 'error');
                            return;
                        }
                        const tbody = document.querySelector('tbody');
                        const tr = document.createElement('tr');
                        tr.innerHTML = `
                            <td class="text-start">${data.brand.brandName}</td>
                            <td class="text-start">
                                <div class="brand-image" style="
                                    width: 100px;
                                    height: 100px;
                                    border-radius: 50%;
                                    overflow: hidden;">
                                    <img src="/uploads/re-image/${data.brand.brandImage}" alt="${data.brand.brandName}" class="img-fluid rounded-circle" style="width: 100%; height: auto" />
                                </div>
                            </td>
                            <td class="text-start">
                                <span class="badge bg-success">Unblocked</span>
                            </td>
                            <td class="text-start">
                                <button class="btn btn-danger block-btn" data-id="${data.brand._id}" style="width: 90px;">Block</button>
                                <button class="btn btn-danger delete-btn" data-id="${data.brand._id}" style="width: 90px;">Delete</button>
                            </td>`;
                        tbody.prepend(tr);
                        attachRowHandlers(tr);
                        form.reset();
                        Swal.fire('Success', 'Brand added successfully', 'success');
                    } catch (err) {
                        Swal.fire('Error', 'Something went wrong', 'error');
                    }
                });
            }

            function attachRowHandlers(scope) {
                const blockBtn = scope.querySelector('.block-btn');
                const unblockBtn = scope.querySelector('.unblock-btn');
                const deleteBtn = scope.querySelector('.delete-btn');

                if (blockBtn) {
                    blockBtn.addEventListener('click', async () => {
                        const id = blockBtn.dataset.id;
                        try {
                            const res = await fetch('/admin/blockBrand?id=' + encodeURIComponent(id), { method: 'POST' });
                            const data = await res.json();
                            if (data.status) {
                                const row = blockBtn.closest('tr');
                                row.querySelector('.badge').className = 'badge bg-danger';
                                row.querySelector('.badge').textContent = 'Blocked';
                                blockBtn.outerHTML = `<button class="btn btn-success unblock-btn" data-id="${id}" style="width: 90px;">Unblock</button>`;
                                attachRowHandlers(row);
                                Swal.fire('Success', 'Brand blocked', 'success');
                            } else {
                                Swal.fire('Error', data.message || 'Failed to block', 'error');
                            }
                        } catch (e) {
                            Swal.fire('Error', 'Something went wrong', 'error');
                        }
                    });
                }

                if (unblockBtn) {
                    unblockBtn.addEventListener('click', async () => {
                        const id = unblockBtn.dataset.id;
                        try {
                            const res = await fetch('/admin/unblockBrand?id=' + encodeURIComponent(id), { method: 'POST' });
                            const data = await res.json();
                            if (data.status) {
                                const row = unblockBtn.closest('tr');
                                row.querySelector('.badge').className = 'badge bg-success';
                                row.querySelector('.badge').textContent = 'Unblocked';
                                unblockBtn.outerHTML = `<button class=\"btn btn-danger block-btn\" data-id=\"${id}\" style=\"width: 90px;\">Block</button>`;
                                attachRowHandlers(row);
                                Swal.fire('Success', 'Brand unblocked', 'success');
                            } else {
                                Swal.fire('Error', data.message || 'Failed to unblock', 'error');
                            }
                        } catch (e) {
                            Swal.fire('Error', 'Something went wrong', 'error');
                        }
                    });
                }

                if (deleteBtn) {
                    deleteBtn.addEventListener('click', async () => {
                        const id = deleteBtn.dataset.id;
                        const confirm = await Swal.fire({
                            title: 'Delete brand?',
                            icon: 'warning',
                            showCancelButton: true
                        });
                        if (!confirm.isConfirmed) return;
                        try {
                            const res = await fetch('/admin/deleteBrand?id=' + encodeURIComponent(id), { method: 'DELETE' });
                            const data = await res.json();
                            if (data.status) {
                                deleteBtn.closest('tr').remove();
                                Swal.fire('Deleted', 'Brand deleted', 'success');
                            } else {
                                Swal.fire('Error', data.message || 'Failed to delete', 'error');
                            }
                        } catch (e) {
                            Swal.fire('Error', 'Something went wrong', 'error');
                        }
                    });
                }
            }

            document.querySelectorAll('tbody tr').forEach(tr => attachRowHandlers(tr));
        });
    </script>

    <%- include("../../views/partials/admin/footer") %>