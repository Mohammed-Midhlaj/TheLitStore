<%- include("../../views/partials/admin/header") %>
    <div class="content-header row">
        <div class="d-flex justify-content-between align-items-center">
            <h2 class="content-title card-title">Customers</h2>

        </div>
    </div>
    </div>

    <header class="card-header text-center mb-20">
        <form action="/admin/users/" method="get" class="d-inline">
            <div class="input-group input-group-sm border border-1 border-grey rounded-pill"
                style="width: 500px; margin-left: 230px;">
                <input type="text" class="form-control border-0 rounded-pill" id="searchInput" placeholder="Search customers..."
                    name="search">
                <button class="btn  border-0" type="submit">Search</button>
                <button class="btn  border-0" type="button" onclick="clearSearch('/admin/users')">Clear</button>
            </div>
        </form>
    </header>
    <div class="right mt-5">
        <table class="table table-striped"
            style=" margin: 10px; font-family: math; font-size: initial; font-weight: 550;">
            <thead>
                <tr>
                    <th scope="col"><b style="font-weight: bolder; font-size:large;">Name</b></th>
                    <th scope="col"><b style="font-weight: bolder; font-size:large;">Email</b></th>
                    <th scope="col"><b style="font-weight: bolder; font-size:large;">Phone No</b></th>
                    <th scope="col"><b style="font-weight: bolder; font-size:large;">Action</b></th>
                </tr>
            </thead>
            <tbody>
                <%for(let i=0; i<data.length; i++){%>
                    <tr>
                        <td>
                            <%=data[i].name%>
                        </td>
                        <td>
                            <%=data[i].email%>
                        </td>
                        <td>
                            <%=data[i].phone%>
                        </td>
                        <td>
                            <% if(data[i].isBlocked === false){ %>
                                <button class="btn btn-danger block-user" data-id="<%= data[i]._id %>" style="width: 80px;">
                                    Block
                                </button>
                            <% } else { %>
                                <button class="btn btn-success unblock-user" data-id="<%= data[i]._id %>" style="width: 80px;">
                                    Unblock
                                </button>
                            <% } %>
                        </td>
                    </tr>
                    <%}%>
            </tbody>
        </table>
    </div>
    <div class="container mt-3">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center mb-20" style="margin-right: 200px;">
                <%for(let i=1; i<=totalPages; i++){%>
                    <li class="page-item <%=(i===currentPage) ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>">
                            <%= i %>
                        </a>
                    </li>
                    <%}%>
            </ul>
        </nav>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function clearSearch(basePath) {
            const input = document.getElementById('searchInput');
            if (input) input.value = '';
            const url = new URL(window.location.href);
            url.searchParams.delete('search');
            url.searchParams.delete('page');
            window.location.href = basePath;
        }
        document.addEventListener('DOMContentLoaded', () => {
            document.querySelectorAll('.block-user').forEach(btn => {
                btn.addEventListener('click', async () => {
                    const userId = btn.dataset.id;
                    const result = await Swal.fire({
                        title: 'Are you sure?',
                        text: 'Do you want to block this user?',
                        icon: 'warning',
                        showCancelButton: true
                    });
                    if (!result.isConfirmed) return;
                    try {
                        const res = await fetch('/admin/blockCustomer?id=' + encodeURIComponent(userId), { method: 'POST' });
                        const data = await res.json();
                        if (data.status) {
                            btn.classList.remove('btn-danger', 'block-user');
                            btn.classList.add('btn-success', 'unblock-user');
                            btn.textContent = 'Unblock';
                            attachHandlers(btn.closest('tr'));
                            Swal.fire('Success', 'Blocked successfully', 'success');
                        } else {
                            Swal.fire('Error', data.message || 'Failed to block', 'error');
                        }
                    } catch (e) {
                        Swal.fire('Error', 'Something went wrong', 'error');
                    }
                });
            });

            document.querySelectorAll('.unblock-user').forEach(btn => {
                btn.addEventListener('click', async () => {
                    const userId = btn.dataset.id;
                    const result = await Swal.fire({
                        title: 'Are you sure?',
                        text: 'Do you want to unblock this user?',
                        icon: 'warning',
                        showCancelButton: true
                    });
                    if (!result.isConfirmed) return;
                    try {
                        const res = await fetch('/admin/unblockCustomer?id=' + encodeURIComponent(userId), { method: 'POST' });
                        const data = await res.json();
                        if (data.status) {
                            btn.classList.remove('btn-success', 'unblock-user');
                            btn.classList.add('btn-danger', 'block-user');
                            btn.textContent = 'Block';
                            attachHandlers(btn.closest('tr'));
                            Swal.fire('Success', 'Unblocked successfully', 'success');
                        } else {
                            Swal.fire('Error', data.message || 'Failed to unblock', 'error');
                        }
                    } catch (e) {
                        Swal.fire('Error', 'Something went wrong', 'error');
                    }
                });
            });

            function attachHandlers(scope) {
                const block = scope.querySelector('.block-user');
                const unblock = scope.querySelector('.unblock-user');
                if (block && !block._bound) { block._bound = true; block.click(); block._bound = false; }
                if (unblock && !unblock._bound) { unblock._bound = true; unblock.click(); unblock._bound = false; }
            }
        });
    </script>
    <%- include("../../views/partials/admin/footer") %>