            .wishlist-button {
                background: transparent;
                border: none;
                color: #666;
                cursor: pointer;
                transition: all 0.3s ease;
                padding: 0.5rem;
            }

            .wishlist-button svg {
                stroke: #000;
                fill: none;
                transition: all 0.3s ease;
                width: 24px;
                height: 24px;
            }

            .wishlist-button.active svg {
                fill: #ff0000;
                stroke: #ff0000;
                transform: scale(1.1);
            }

            .wishlist-button:hover svg {
                transform: scale(1.1);
            }

